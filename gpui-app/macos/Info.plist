<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleName</key>
    <string>VisiGrid</string>
    <key>CFBundleDisplayName</key>
    <string>VisiGrid</string>
    <key>CFBundleIdentifier</key>
    <string>com.visigrid.app</string>
    <key>CFBundleVersion</key>
    <string>0.5.9</string>
    <key>CFBundleShortVersionString</key>
    <string>0.5.9</string>
    <key>CFBundleExecutable</key>
    <string>visigrid</string>
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleSignature</key>
    <string>VSGD</string>
    <key>LSMinimumSystemVersion</key>
    <string>12.0</string>
    <key>NSHighResolutionCapable</key>
    <true/>
    <key>NSSupportsAutomaticGraphicsSwitching</key>
    <true/>
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.productivity</string>
    <key>NSHumanReadableCopyright</key>
    <string>Copyright Â© 2025 RegAtlas, LLC. All rights reserved.</string>

    <!-- ============================================================
         Document Types
         Declares which file types VisiGrid can open.
         LSItemContentTypes is required for modern macOS (10.10+).
         ============================================================ -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <!-- Native: .vgrid (VisiGrid workbook) -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>VisiGrid Workbook</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>vgrid</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.visigrid.vgrid</string>
            </array>
        </dict>

        <!-- Native: .sheet (VisiGrid sheet format) -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>VisiGrid Sheet</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>sheet</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.visigrid.sheet</string>
            </array>
        </dict>

        <!-- Excel: .xlsx (Office Open XML Spreadsheet) -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>Excel Workbook</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>xlsx</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>org.openxmlformats.spreadsheetml.sheet</string>
            </array>
        </dict>

        <!-- Excel: .xls (Legacy Excel Binary) -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>Excel 97-2003 Workbook</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>xls</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.microsoft.excel.xls</string>
            </array>
        </dict>

        <!-- CSV -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>CSV Document</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>csv</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.comma-separated-values-text</string>
            </array>
        </dict>

        <!-- TSV -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>TSV Document</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>tsv</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.tab-separated-values-text</string>
            </array>
        </dict>
    </array>

    <!-- ============================================================
         Exported UTTypes (custom types owned by VisiGrid)
         ============================================================ -->
    <key>UTExportedTypeDeclarations</key>
    <array>
        <!-- .vgrid -->
        <dict>
            <key>UTTypeIdentifier</key>
            <string>com.visigrid.vgrid</string>
            <key>UTTypeDescription</key>
            <string>VisiGrid Workbook</string>
            <key>UTTypeConformsTo</key>
            <array>
                <string>public.data</string>
            </array>
            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>vgrid</string>
                </array>
            </dict>
        </dict>

        <!-- .sheet -->
        <dict>
            <key>UTTypeIdentifier</key>
            <string>com.visigrid.sheet</string>
            <key>UTTypeDescription</key>
            <string>VisiGrid Sheet</string>
            <key>UTTypeConformsTo</key>
            <array>
                <string>public.data</string>
            </array>
            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>sheet</string>
                </array>
            </dict>
        </dict>
    </array>
</dict>
</plist>
